<h3 class="well" style="text-align:center;"> Queries </h3>
<% count = 0 %>
<%if @queries.first == nil %>
<h5 class="well"> No queries. </h5>
<% end %>
<% @queries.each do |query|%>
  <div class="queries">
    <span class="badge"><%= count += 1 %></span>
    <h4><%= query.client.name %></h4>
    <h4><%= query.credit_type.kind %></h4>
    <%= link_to "Descry", descry_credit_path(query) %> |
    <%= link_to "Accept", accept_credit_path(query,'yes') %> |
    <%= link_to "Reject", accept_credit_path(query,'no') %>
  </div>
<% end %>